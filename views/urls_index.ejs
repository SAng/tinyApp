<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_header %>
  </head>
  <body>
    <% if(!user){ %>
      <h1><a href = '/login'>Please Login</a></h1>
    <% } else{ %>
      <h1>Active URLs</h1>
      <ul>
        <% for(var key in urls) { %>
          <li><%= key + ': ' + urls[key] %>
          <form action="/urls/<%= key %>/delete" method="POST" >
            <button>Delete</button>
          </form>
          <a href = "/urls/<%= key %>">Edit</a></li>
        <% } %>
      </ul>
      <li><a href = '/urls/new'>Link to make a new URL</a></li>
    <% } %>
  </body>
</html>

